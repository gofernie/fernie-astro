---
import Site from "../layouts/Site.astro";
const title = "Fernie Real Estate";
const description = "Fast, mobile-first site powered by Google Sheets.";
---
<Site title={title} description={description} active="home">
  <style>
    .hero { padding: 48px 0; }
    .hero h1 { margin:0 0 8px; font-size: clamp(32px,6vw,56px); }
    .hero p { margin:0 0 16px; color:#444; font-size:clamp(16px,2.4vw,20px); }
    .cta { display:inline-flex; gap:10px; flex-wrap:wrap; }
    .btn { display:inline-block; padding:12px 16px; border:1px solid #111; border-radius:12px; text-decoration:none; color:#111; }
  </style>

  <section class="hero">
    <h1>Find your place in Fernie</h1>
    <p>Browse neighbourhoods with trail access, schools, views, and more.</p>
    <div class="cta">
      <a class="btn" href="/neighbourhoods">Explore neighbourhoods</a>
      <a class="btn" href="#">Talk to Chris</a>
    </div>
  </section>
</Site>
